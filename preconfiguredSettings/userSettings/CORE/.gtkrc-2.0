gtk-theme-name="Xfce-winter"
gtk-icon-theme-name="NITRUX"
gtk-font-name="Hermit Medium 10"
gtk-cursor-theme-name="DMZ-White"
gtk-cursor-theme-size=0
gtk-toolbar-style=GTK_TOOLBAR_BOTH
gtk-toolbar-icon-size=GTK_ICON_SIZE_LARGE_TOOLBAR
gtk-button-images=1
gtk-menu-images=1
gtk-enable-event-sounds=1
gtk-enable-input-feedback-sounds=1
gtk-xft-antialias=1
gtk-xft-hinting=1
gtk-xft-hintstyle="hintfull"
gtk-xft-rgba="rgb"

style "scrollbar"
{
    GtkScrollbar::slider-width = 28 
}
class "Gtk*Scrollbar" style "scrollbar"

style "resize-grip"
{
	GtkWindow::resize-grip-height = 28
	GtkWindow::resize-grip-width = 28
}
class "GtkWindow*" style "resize-grip"
