[Icon Theme]
Name=NITRUX
Comment=The Nitrux OS icons
Inherits=

Example=x-directory-normal

Directories=actions/scalable,actions/symbolic,apps/scalable,apps/symbolic,categories/scalable,categories/small,devices/scalable,devices/small,devices/symbolic,emblems/scalable,emblems/symbolic,mimetypes/scalable,mimetypes/16,mimetypes/22,mimetypes/24,mimetypes/32,places/scalable,places/small,places/symbolic,status/scalable,status/small,status/symbolic,tools/birdie,tools/inkscape,tools/geary-16,tools/geary-24,tools/mail-clients,tools/pomidor,tools/synaptic

[actions/scalable]
Size=96
Context=Actions
Type=Scalable
MinSize=16
MaxSize=96

[actions/symbolic]
Size=16
Context=Actions
Type=Scalable

[apps/scalable]
Size=512
Context=Applications
Type=Scalable
MinSize=16
MaxSize=512

[apps/symbolic]
Size=16
Context=Applications
Type=Scalable

[categories/scalable]
